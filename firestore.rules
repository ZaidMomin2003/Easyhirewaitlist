
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to waitlist entries.
    // The results page is protected by a hardcoded password.
    match /waitlist_entries/{waitlistEntryId} {
      allow read: if true;
      allow write: if true; // Allow public form submissions
    }

    // Lock down admin roles collection
    match /roles_admin/{uid} {
      allow read, write: if false;
    }
  }
}
